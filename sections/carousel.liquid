{{ 'section-carousel.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .carousel-slider {
    position: relative;
    max-width: 100%;
    margin: 0 auto;
  }

  .carousel-slider__slide {
    position: relative;
    text-align: center;
  }

  .carousel-slider__content {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.6);
    padding: 10px 20px;
    color: white;
    max-width: 80%;
  }

  .carousel-slider__button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    margin-top: 10px;
  }

  .carousel-slider__button:hover {
    background-color: #444;
  }
{%- endstyle -%}

<div class="carousel-slider" id="Carousel-{{ section.id }}">
  <div class="carousel-slider__wrapper">
    {% for block in section.blocks %}
      <div class="carousel-slider__slide">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.alt_text }}">
        {% endif %}

        <div class="carousel-slider__content">
          {%- if block.settings.heading != blank -%}
            <h3>{{ block.settings.heading }}</h3>
          {%- endif -%}

          {%- if block.settings.description != blank -%}
            <p>{{ block.settings.description }}</p>
          {%- endif -%}

          {%- if block.settings.button_text != blank -%}
            <a href="{{ block.settings.button_link }}" class="carousel-slider__button">
              {{- block.settings.button_text -}}
            </a>
          {%- endif -%}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{%- javascript -%}
  $(document).ready(function(){
    $('#Carousel-{{ section.id }} .carousel-slider__wrapper').slick({
      dots: true,
      infinite: true,
      speed: 500,
      slidesToShow: {{ section.settings.slides_to_show }},
      slidesToScroll: {{ section.settings.slides_to_scroll }},
      autoplay: {{ section.settings.autoplay }},
      autoplaySpeed: {{ section.settings.autoplay_speed }},
      arrows: true,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: {{ section.settings.mobile_slides_to_show }},
            slidesToScroll: {{ section.settings.mobile_slides_to_scroll }}
          }
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
  });
{%- endjavascript -%}

{% schema %}
{
  "name": "Carousel / Slider",
  "settings": [
    {
      "type": "select",
      "id": "layout_type",
      "label": "Select Layout Type",
      "default": "carousel",
      "options": [
        { "value": "carousel", "label": "Carousel" },
        { "value": "slider", "label": "Slider" }
      ]
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay Speed (ms)",
      "min": 1000,
      "max": 10000,
      "step": 1000,
      "default": 3000
    },
    {
      "type": "range",
      "id": "slides_to_show",
      "label": "Slides to Show (Desktop)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_to_scroll",
      "label": "Slides to Scroll (Desktop)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 1
    },
    {
      "type": "range",
      "id": "mobile_slides_to_show",
      "label": "Slides to Show (Mobile)",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 1
    },
    {
      "type": "range",
      "id": "mobile_slides_to_scroll",
      "label": "Slides to Scroll (Mobile)",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 1
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image",
          "info": "Optional. Leave blank for a text-only slide."
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Image Alt Text",
          "default": ""
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Slide Heading",
          "default": "This is a heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Slide Description",
          "default": "Add your slide description here."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link",
          "default": "#"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carousel / Slider",
      "category": "Media"
    }
  ]
}
{% endschema %}
